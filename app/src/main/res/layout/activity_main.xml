<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira seu peso"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="39dp" />

    <Button
        android:id="@+id/btn_calcularPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular peso"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/lbl_maisPeso"
        android:layout_width="148dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="205dp" />

    <TextView
        android:id="@+id/lbl_menosPeso"
        android:layout_width="148dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais 15% de Peso :"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="205dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menos 25% de Peso :"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="296dp" />
</androidx.constraintlayout.widget.ConstraintLayout>